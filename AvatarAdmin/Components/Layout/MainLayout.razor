@inherits LayoutComponentBase
@inject AvatarAdmin.Services.AuthState Auth

<a href="#main-content" class="visually-hidden">Saltar al contenido</a>

<div class="sentry-layout" role="application">
  <aside class="sentry-sidebar" aria-label="Navegación principal">
    <div class="sentry-sidebar-brand">
      <span class="material-symbols-outlined sentry-brand-icon" aria-hidden="true">local_fire_department</span>
      <span class="sentry-brand-text">Sistemas <span class="sentry-brand-accent">Sentry</span></span>
    </div>
    <NavMenu />
    <div class="sentry-sidebar-footer">
      @if (Auth.IsAuthenticated)
      {
        <a href="/profile/avatar" class="sentry-user-card">
          <img class="sentry-user-avatar" src="/img/avatar-silhouette.svg" alt="" />
          <div class="sentry-user-info">
            <span class="sentry-user-name">@(Auth.Email?.Split('@').FirstOrDefault() ?? "Usuario")</span>
            <span class="sentry-user-role">Ver perfil</span>
          </div>
        </a>
      }
    </div>
  </aside>

  <main id="main-content" class="sentry-main" role="main">
    <article class="sentry-content">
      @Body
    </article>
  </main>
</div>

<div id="blazor-error-ui" role="status" aria-live="polite">
  Ha ocurrido un error.
  <a href="" class="reload">Recargar</a>
  <button class="dismiss" type="button" onclick="document.getElementById('blazor-error-ui').style.display='none'">×</button>
</div>
