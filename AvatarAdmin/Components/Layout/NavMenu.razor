@implements IDisposable

@inject NavigationManager NavigationManager

<nav class="menu-groups">
    <section class="menu-group">
        <p class="menu-title">Panel</p>
        <NavLink class="menu-link" href="" Match="NavLinkMatch.All">
            <span class="menu-icon menu-icon-home" aria-hidden="true"></span>
            <span>Panel principal</span>
        </NavLink>
    </section>

    <AuthorizeView>
        <Authorized>
            <section class="menu-group">
                <p class="menu-title">Tu sesión</p>
                <div class="menu-user">
                    <span class="menu-icon menu-icon-user" aria-hidden="true"></span>
                    <span>@context.User.Identity?.Name</span>
                </div>
                <form action="Account/Logout" method="post" class="logout-form">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                    <button type="submit" class="menu-link as-button">
                        <span class="menu-icon menu-icon-logout" aria-hidden="true"></span>
                        <span>Salir</span>
                    </button>
                </form>
            </section>
        </Authorized>
        <NotAuthorized>
            <section class="menu-group">
                <p class="menu-title">Acceso</p>
                <NavLink class="menu-link" href="Account/Login">
                    <span class="menu-icon menu-icon-login" aria-hidden="true"></span>
                    <span>Iniciar sesión</span>
                </NavLink>
                <NavLink class="menu-link" href="Account/Register">
                    <span class="menu-icon menu-icon-register" aria-hidden="true"></span>
                    <span>Crear cuenta</span>
                </NavLink>
            </section>
        </NotAuthorized>
    </AuthorizeView>
</nav>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
