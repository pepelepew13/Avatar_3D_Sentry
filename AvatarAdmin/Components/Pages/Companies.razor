@page "/companies"
@using AvatarAdmin.Services
@inject AvatarApiClient Api
@inject AuthState Auth
@inject NavigationManager Nav

<PageTitle>Empresas ¬∑ Sentry Admin</PageTitle>

<AdminGuard>
  <section class="users-header" role="region" aria-label="Empresas">
    <div class="users-header-inner">
      <div class="users-header-copy">
        <h1 class="users-title">Empresas</h1>
        <p class="users-subtitle">Listado de empresas registradas en el sistema.</p>
      </div>
    </div>
  </section>

  <section class="card configs-filters">
    <div class="filter-grid">
      <div class="field">
        <label class="form-label" for="co-code">C√≥digo</label>
        <input id="co-code" class="form-control" @bind="codeFilter" placeholder="C√≥digo" />
      </div>
      <div class="field">
        <label class="form-label" for="co-name">Nombre</label>
        <input id="co-name" class="form-control" @bind="nameFilter" placeholder="Nombre" />
      </div>
      <div class="field actions">
        <button class="btn btn-primary" @onclick="LoadAsync" disabled="@loading">Buscar</button>
      </div>
    </div>
  </section>

  @if (!string.IsNullOrWhiteSpace(error))
  {
    <div class="alert alert-danger" role="alert">@error</div>
  }

  <section class="card configs-table">
    <div class="table-wrap">
      @if (loading)
      {
        <div class="skeleton-row"></div>
        <div class="skeleton-row"></div>
      }
      else if (items.Count == 0)
      {
        <div class="empty-row">
          <div class="empty-ic">üè¢</div>
          <div>No hay empresas con estos filtros.</div>
        </div>
      }
      else
      {
        <table class="table">
          <thead>
            <tr>
              <th>Id</th>
              <th>C√≥digo</th>
              <th>Nombre</th>
              <th>Sector</th>
              <th>Activa</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var c in items)
            {
              <tr>
                <td>@c.Id</td>
                <td><code>@(c.Code ?? "‚Äî")</code></td>
                <td>@c.Name</td>
                <td>@(c.Sector ?? "‚Äî")</td>
                <td>@(c.IsActive ? "S√≠" : "No")</td>
              </tr>
            }
          </tbody>
        </table>
        <div class="table-footer text-muted">
          Total: @total ¬∑ P√°gina @(page) de @(totalPages > 0 ? totalPages : 1)
        </div>
      }
    </div>
  </section>
</AdminGuard>

@code {
  private bool loading;
  private string? error;
  private List<AvatarApiClient.CompanyItem> items = new();
  private int total;
  private int totalPages;
  private int page = 1;
  private int pageSize = 20;
  private string? codeFilter;
  private string? nameFilter;

  protected override async Task OnInitializedAsync()
  {
    await Auth.EnsureHydratedAsync();
    if (Auth.IsAdmin)
      await LoadAsync();
  }

  private async Task LoadAsync()
  {
    loading = true;
    error = null;
    StateHasChanged();
    try
    {
      var resp = await Api.ListCompaniesAsync(
        code: string.IsNullOrWhiteSpace(codeFilter) ? null : codeFilter,
        name: string.IsNullOrWhiteSpace(nameFilter) ? null : nameFilter,
        page: page,
        pageSize: pageSize);
      items = resp.Items ?? new();
      total = resp.Total;
      totalPages = resp.TotalPages;
    }
    catch (Exception ex)
    {
      error = ex.Message;
      items = new();
    }
    finally
    {
      loading = false;
      StateHasChanged();
    }
  }
}
