{
  "Logging": { "LogLevel": { "Default": "Information", "Microsoft.AspNetCore": "Warning" } },
  "Database": { "Provider": "Sqlite" },
  "ConnectionStrings": { "AvatarDb": "Data Source=Data/avatar-dev.db" },

  "Jwt": {
    "Issuer": "AvatarSentry",
    "Audience": "AvatarSentry.Clients",
    "Key": "DEV-ONLY-DO-NOT-USE-IN-PROD"
  },

  "Speech": {
    "Key": "env:SPEECH_KEY",
    "Region": "env:SPEECH_REGION",
    "Endpoint": "env:SPEECH_ENDPOINT",
    "DefaultVoice": "env:VOICE_NAME"
  },

  "Storage": {
    "Mode": "Auto",
    "AzureConnection": "env:AZURE_STORAGE_CONNECTION",
    "Containers": {
      "Models": "models",
      "Logos": "logos",
      "Backgrounds": "backgrounds",
      "Audio": "audio"
    },
    "SasExpiryMinutes": 10,
    "Local": {
      "Root": "wwwroot",
      "ModelsPath": "wwwroot/models",
      "LogosPath": "wwwroot/logos",
      "BackgroundsPath": "wwwroot/backgrounds",
      "AudioPath": "Resources/audio"
    }
  },

  "Dashboard": { "PanelUrl": "http://localhost:5168" }
}
